                  head, lapply, match, paste, precede, queryHits,
                  rbind, rev, Rle, runValue, sapply, shift, split,
                  start, "start<-", subjectHits, "subseq<-", substring,
                  unique, unlist, values, "values<-", width)
importMethodsFrom(Rsamtools, scanFaIndex, scanBcf, ScanBcfParam, scanBcfHeader)


importFrom(GenomicFeatures, extractTranscriptsFromGenome)
importFrom(Biobase, mkScalar, selectSome)
