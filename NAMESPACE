import(Biostrings)
import(GenomicRanges)

importClassesFrom(Biobase, ScalarCharacter)
importClassesFrom(BSgenome, BSgenome)
importClassesFrom(GenomicFeatures, TranscriptDb)
importClassesFrom(IRanges, FilterRules, Ranges)
importClassesFrom(methods, ANY, data.frame, "function", logical,
                  missing)
importClassesFrom(Rsamtools, FaFile)


importMethodsFrom(GenomicFeatures, cdsBy, exons, transcripts,
                  fiveUTRsByTranscript, threeUTRsByTranscript)
importMethodsFrom(IRanges, '%in%', append, as.vector, countOverlaps,
                  elementLengths, end, eval, findOverlaps, follow,
                  head, lapply, match, paste, precede, queryHits,
                  rbind, rev, Rle, runValue, sapply, shift, split,
                  start, "start<-", subjectHits, "subseq<-", substring,
                  unique, unlist, values, "values<-", width)
importMethodsFrom(methods, coerce, Logic, show)
importMethodsFrom(Rsamtools, scanFaIndex)


importFrom(GenomicFeatures, extractTranscriptsFromGenome)
importFrom(Biobase, mkScalar, selectSome)
importFrom(IRanges, CharacterList, DataFrame, FilterRules, IRanges,
           PartitioningByWidth, successiveViews)
importFrom(methods, as, callGeneric, callNextMethod, new, slot)


exportClassPattern("^.*$")

exportMethods(
    predictCoding, getTranscriptSeqs,
    show, c)

export(
    locateVariants, 
    getTranscriptSeqs, globalToLocal,
    listCumsum, listCumsumShifted)

exportPattern("^[^\\.]")
